<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cafeflowapp.registerController"
            style="-fx-background-color: #FAF0E6;">

    <center>
        <VBox alignment="CENTER" spacing="18"
              style="-fx-padding: 40;">
            <children>

                <Label text="Create Account"
                       style="-fx-text-fill: #4A2C2A;">
                    <font>
                        <Font name="Georgia" size="28"/>
                    </font>
                </Label>

                <Label text="Join CafÃ©Flow as a new customer."
                       style="-fx-text-fill: #6B4A3D;">
                    <font>
                        <Font name="Segoe UI" size="14"/>
                    </font>
                </Label>

                <VBox spacing="12" alignment="CENTER" maxWidth="380">
                    <children>
                        <TextField fx:id="fullNameField"
                                   promptText="Full Name"
                                   style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #E0C9A6; -fx-background-color: #FFF9ED; -fx-padding: 8;"/>

                        <TextField fx:id="emailField"
                                   promptText="Email Address"
                                   style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #E0C9A6; -fx-background-color: #FFF9ED; -fx-padding: 8;"/>

                        <PasswordField fx:id="passwordField"
                                       promptText="Password"
                                       style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #E0C9A6; -fx-background-color: #FFF9ED; -fx-padding: 8;"/>

                        <PasswordField fx:id="confirmPasswordField"
                                       promptText="Confirm Password"
                                       style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #E0C9A6; -fx-background-color: #FFF9ED; -fx-padding: 8;"/>
                    </children>
                </VBox>

                <Button fx:id="registerButton"
                        text="Sign Up"
                        onAction="#handleRegister"
                        prefWidth="380"
                        style="-fx-background-color: linear-gradient(to right, #4A2C2A, #9B5A3C); -fx-text-fill: #FAF0E6; -fx-background-radius: 20; -fx-padding: 10 18; -fx-cursor: hand;"/>

                <HBox alignment="CENTER" spacing="4">
                    <children>
                        <Label text="Already have an account?"
                               style="-fx-text-fill: #6B4A3D;"/>
                        <Hyperlink text="Login here"
                                   onAction="#handleBackToLogin"
                                   style="-fx-text-fill: #9B5A3C; -fx-underline: true; -fx-cursor: hand;"/>
                    </children>
                </HBox>

                <Label fx:id="messageLabel"
                       textFill="#B22222"
                       wrapText="true"
                       maxWidth="380"/>

            </children>
        </VBox>
    </center>

</BorderPane>